system You, Assistant, Janitor, Professor, Lamp;
*/


system LigthsMinorRoad, LigthsMajorRoad, Sensor;
</system>
	<queries>
		<query>
			<formula>E&lt;&gt; (You.right and Assistant.right and Janitor.right and Professor.right and g_time &lt; 17)</formula>
